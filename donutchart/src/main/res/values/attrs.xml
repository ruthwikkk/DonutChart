<resources>
    <declare-styleable name="DonutChart">
        <attr name="donutWidth" format="dimension" />
        <attr name="donutSmallWidth" format="dimension" />
        <attr name="textPadding" format="dimension" />
        <attr name="correctPercentage" format="integer" />
        <attr name="wrongPercentage" format="integer" />
        <attr name="unAnsweredPercentage" format="integer" />
        <attr name="separatorAngle" format="float" />
        <attr name="animationDuration" format="integer" />
    </declare-styleable>

    <declare-styleable name="DonutProgressView">
        <attr name="progressArcWidth" format="dimension" />
        <attr name="defaultArcColour" format="color" />
        <attr name="progressArcColour" format="color" />
        <attr name="progressTextColour" format="color" />
        <attr name="progressTextPadding" format="dimension" />
    </declare-styleable>

</resources>